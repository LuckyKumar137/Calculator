<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/inputTextview"
        android:layout_width="412dp"
        android:layout_height="80dp"

        android:paddingLeft="220sp"
        android:maxLines="1"
        android:gravity="end"
        android:paddingTop="10dp"
        android:text="122222"
        android:textSize="40dp"
        android:ellipsize="start"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.138" />

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="412dp"
        android:layout_height="50dp"
        android:paddingLeft="250sp"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:text="114547"
        android:textSize="30dp"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.842"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.226" />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="410dp"
        android:layout_height="501dp"
        android:paddingLeft="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingClass">

        <Button
            android:id="@+id/Ac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="20dp"

            android:text="AC"

            android:textSize="25dp"

            app:layout_column="0"
            app:layout_row="0" />


        <Button
            android:id="@+id/button23"
            android:layout_width="wrap_content"
            android:layout_height="84dp"
            android:layout_margin="5dp"
            android:text="C"
            android:textSize="30dp"
            app:layout_column="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/percentage"
            android:layout_width="wrap_content"
            android:layout_height="84dp"
            android:layout_margin="5dp"
            android:text="%"
            android:textSize="30dp"
            app:layout_column="2"
            app:layout_row="0" />


        <Button
            android:id="@+id/divide"
            android:layout_width="wrap_content"
            android:layout_height="84dp"
            android:layout_margin="5dp"
            android:text="/"
            android:textSize="30dp"
            app:layout_column="3"
            app:layout_row="0" />


        <Button
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="84dp"
            android:layout_margin="5dp"
            android:text="1"
            android:textSize="30dp"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="84dp"
            android:layout_margin="5dp"
            android:text="2"
            android:textSize="30dp"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_margin="5dp"
            android:text="3"
            android:textSize="30dp"
            app:layout_column="2"
            app:layout_row="1" />

        <Button
            android:id="@+id/multiply"
            android:layout_width="wrap_content"
            android:layout_height="84dp"
            android:layout_margin="5dp"
            android:text="*"
            android:textSize="30sp"
            app:layout_column="3"
            app:layout_row="1" />


        <Button
            android:id="@+id/four"
            android:layout_width="wrap_content"
            android:layout_height="84dp"
            android:layout_margin="5dp"
            android:text="4"
            android:textSize="30dp"
            app:layout_column="0"
            app:layout_row="2" />


        <Button
            android:id="@+id/five"
            android:layout_width="wrap_content"
            android:layout_height="84dp"
            android:layout_margin="5dp"
            android:text="5"
            app:layout_column="1"
            android:textSize="30dp"
            app:layout_row="2" />


        <Button
            android:id="@+id/six"
            android:layout_width="wrap_content"
            android:layout_height="84dp"
            android:layout_margin="5dp"
            android:text="6"
            android:textSize="30sp"
            app:layout_column="2"
            app:layout_row="2" />


        <Button
            android:id="@+id/minus"
            android:layout_width="wrap_content"
            android:layout_height="84dp"
            android:layout_margin="5dp"
            android:text="-"
            android:textSize="30dp"
            app:layout_column="3"
            app:layout_row="2" />

        <Button
            android:id="@+id/seven"
            android:layout_width="wrap_content"
            android:layout_height="84dp"
            android:layout_margin="5dp"
            android:text="7"
            android:textSize="30sp"
            app:layout_column="0"
            app:layout_row="3" />

        <Button
            android:id="@+id/eight"
            android:layout_width="wrap_content"
            android:layout_height="84dp"
            android:layout_margin="5dp"
            android:text="8"
            android:textSize="30sp"
            app:layout_column="1"
            app:layout_row="3" />

        <Button
            android:id="@+id/nine"
            android:layout_width="wrap_content"
            android:layout_height="84dp"
            android:layout_margin="5dp"
            android:text="9"
            android:textSize="30sp"
            app:layout_column="2"
            app:layout_row="3" />


        <Button
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="84dp"
            android:layout_margin="5dp"
            android:text="+"
            android:textSize="30dp"
            app:layout_column="3"
            app:layout_row="3" />

        <Button
            android:id="@+id/point"
            android:layout_width="wrap_content"
            android:layout_height="84dp"
            android:layout_margin="5dp"
            android:text="."
            android:textSize="30sp"
            app:layout_column="0"
            app:layout_row="4" />

        <Button
            android:id="@+id/zero"
            android:layout_width="wrap_content"
            android:layout_height="84dp"
            android:layout_margin="5dp"
            android:text="0"
            android:textSize="30sp"
            app:layout_column="1"
            app:layout_row="4" />

        <Button
            android:id="@+id/equal"
            android:layout_width="wrap_content"
            android:layout_height="84dp"
            android:layout_margin="5dp"
            android:text="="
            android:textSize="30sp"
            app:layout_column="2"
            app:layout_row="4" />


    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>